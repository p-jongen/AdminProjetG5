
acl internals {
    localhost;
    54.37.65.81;
    54.37.65.135;
};

view internal {
    match-clients { internals; };
    recursion yes;
    allow-recursion { internals; };
    forwarders {
        8.8.8.8;
        8.8.4.4;
    };
    zone "wt5.ephec-ti.be" {
        type master;
        file "/etc/bind/db.internal.wt5.ephec-ti.be";
    };
};

view external {
    match-clients { any; };
    zone "wt5.ephec-ti.be" {
        type master;
        file "/etc/bind/db.wt5.ephec-ti.be";
    };
};

